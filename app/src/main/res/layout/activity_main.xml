    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.rexdroid.ObservableExampleActivity">

    <Button
        style="@style/BtnStyle"
        android:onClick="singleExample"
        android:text="Single" />

    <Button
        style="@style/BtnStyle"
        android:onClick="mayBeExample"
        android:text="Maybe" />

    <Button
        style="@style/BtnStyle"
        android:onClick="observableExample"
        android:text="Observable" />

    <Button
        style="@style/BtnStyle"
        android:onClick="flowableExample"
        android:text="Flowable" />

    <Button
        style="@style/BtnStyle"
        android:onClick="completableExample"
        android:text="Completable" />
</LinearLayout>
